/* 全局样式 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  color: #333;
}

/* 容器样式 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 按钮样式 */
.btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.btn-secondary {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  color: #333;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #667eea;
  color: #667eea;
}

/* 输入框样式 */
.input {
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.input:focus {
  border-color: #667eea;
  background: #fff;
}

/* 标题样式 */
.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 36rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 16rpx;
}

/* 文本样式 */
.text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

.text-primary {
  color: #667eea;
}

.text-center {
  text-align: center;
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 间距样式 */
.mt-10 { margin-top: 20rpx; }
.mt-20 { margin-top: 40rpx; }
.mb-10 { margin-bottom: 20rpx; }
.mb-20 { margin-bottom: 40rpx; }
.ml-10 { margin-left: 20rpx; }
.mr-10 { margin-right: 20rpx; }

/* 颜色样式 */
.color-primary { color: #667eea; }
.color-success { color: #4caf50; }
.color-warning { color: #ff9800; }
.color-error { color: #f44336; }

/* 背景样式 */
.bg-primary { background-color: #667eea; }
.bg-success { background-color: #4caf50; }
.bg-warning { background-color: #ff9800; }
.bg-error { background-color: #f44336; }

/* 圆角样式 */
.rounded { border-radius: 8rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-full { border-radius: 50%; }

/* 阴影样式 */
.shadow {
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.08);
}

.shadow-lg {
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.12);
}

/* 动画样式 */
.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 性别切换样式 */
.gender-switch {
  background: #f0f0f0;
  border-radius: 50rpx;
  padding: 8rpx;
  display: flex;
  margin-bottom: 30rpx;
}

.gender-option {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 42rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.gender-option.active {
  background: #667eea;
  color: #fff;
}

/* 加载样式 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.loading-text {
  margin-left: 20rpx;
  color: #999;
  font-size: 28rpx;
}