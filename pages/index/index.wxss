/* 首页样式 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.hitokoto {
  font-size: 24rpx;
  color: #666;
  font-style: italic;
  text-align: center;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  line-height: 1.4;
  opacity: 0.8;
}

/* 信息展示容器样式 */
.info-container {
  padding: 20rpx 30rpx;
}

/* 主要信息条 */
.main-info-bar {
  display: flex;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.2);
}

.info-section {
  flex: 1;
  display: flex;
  align-items: center;
  color: white;
}

.info-section:not(:last-child) {
  border-right: 1rpx solid rgba(255, 255, 255, 0.2);
  padding-right: 20rpx;
  margin-right: 20rpx;
}

.info-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.info-content {
  flex: 1;
}

.info-title {
  font-size: 22rpx;
  opacity: 0.8;
  margin-bottom: 4rpx;
}

.info-text {
  font-size: 26rpx;
  font-weight: bold;
}

/* 一言展示条 */
.hitokoto-bar {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 20rpx 25rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border-left: 4rpx solid #feca57;
}

.hitokoto-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
}

.hitokoto-text {
  flex: 1;
  font-size: 24rpx;
  color: #555;
  line-height: 1.4;
  font-style: italic;
}

/* AI使用情况条 */
.ai-usage-bar {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 20rpx 25rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border-left: 4rpx solid #48dbfb;
}

.usage-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
}

.usage-text {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 个人偏好卡片 */
.preference-card {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border: none;
}

/* 生成按钮容器 */
.generate-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

/* 生成按钮基础样式 */
.generate-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.generate-btn:active {
  transform: translateY(2rpx);
}

.generate-btn.generating {
  pointer-events: none;
  opacity: 0.7;
  transform: none;
}

.generate-btn.generating:active {
  transform: none;
}

/* 衣橱生成按钮 */
.wardrobe-btn {
  background: linear-gradient(135deg,rgba(251, 251, 251, 0.93),rgb(250, 250, 250));
  color: black;
  box-shadow: 0 8rpx 25rpx rgba(249, 248, 248, 0.33);
}

.wardrobe-btn.generating {
  background: linear-gradient(135deg, #ccc, #999);
}

/* 风格生成按钮 */
.style-btn {
  background: linear-gradient(135deg, #ff8a80, #ffab91);
  color: black;
  box-shadow: 0 8rpx 25rpx rgba(255, 138, 128, 0.3);
}

.style-btn.generating {
  background: linear-gradient(135deg, #ccc, #999);
}

/* 按钮内容样式 */
.btn-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.btn-desc {
  font-size: 22rpx;
  opacity: 0.9;
  text-align: center;
  line-height: 1.3;
}

/* 随机搭配结果 */
.random-outfits {
  margin-top: 30rpx;
}

.outfit-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.outfit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.outfit-actions {
  display: flex;
  gap: 15rpx;
  margin-top: 10rpx;
  justify-content: space-between;
  align-items: center;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  flex: 1;
  justify-content: center;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.action-icon {
  font-size: 28rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.outfit-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.outfit-weather {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.weather-tag {
  font-size: 20rpx;
  color: #666;
  font-weight: 500;
}

.outfit-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
}

/* 穿搭图片展示 */
.outfit-images {
  margin: 20rpx 0;
  padding: 0 20rpx;
}

.images-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.images-scroll {
  white-space: nowrap;
}

.image-item {
  display: inline-block;
  margin-right: 15rpx;
  text-align: center;
}

.outfit-image {
  width: 120rpx;
  height: 160rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.outfit-image:active {
  transform: scale(0.95);
}

.image-desc {
  font-size: 20rpx;
  color: #666;
  margin-top: 8rpx;
  width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.outfit-explanation {
  margin-top: 20rpx;
}

.explanation-section {
  margin-bottom: 16rpx;
}

.explanation-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.explanation-text {
  font-size: 24rpx;
  line-height: 1.5;
  color: #666;
  padding-left: 20rpx;
  border-left: 2rpx solid #e0e0e0;
}

/* 颜色展示样式 */
.color-palette {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 15rpx;
}

.color-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 80rpx;
}

.color-circle {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 2rpx solid #e0e0e0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 8rpx;
}

.color-name {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  line-height: 1.2;
}

/* 功能卡片 */
.features {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.feature-card {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  transition: all 0.3s ease;
  border-left: 8rpx solid transparent;
}

.feature-card:active {
  transform: translateX(10rpx);
  border-left-color: #667eea;
}

.feature-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
  width: 80rpx;
  text-align: center;
}

.feature-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

/* 风格选择 */
.style-card {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.style-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.style-item {
  background: rgba(255, 255, 255, 0.4);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.style-item:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.6);
}

.style-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.style-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 风格选择样式 */
.style-section {
  margin: 30rpx 0;
  padding: 0 30rpx;
}

.color-section {
  margin: 30rpx 0;
  padding: 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.style-grid, .color-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15rpx;
}

.style-btn, .color-btn {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx 10rpx;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

/* 男生主题 - 蓝色系 */
.style-btn.male.active, .color-btn.male.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
}

/* 女生主题 - 粉色系 */
.style-btn.female.active, .color-btn.female.active {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  border-color: #ff9a9e;
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(255, 154, 158, 0.3);
}

.style-text, .color-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.style-btn.active .style-text, .color-btn.active .color-text {
  color: white;
  font-weight: bold;
}

/* 进度条样式 */
.progress-container {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-left: 4rpx solid #667eea;
}

.progress-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 使用次数卡片 */
.usage-card {
  background: linear-gradient(135deg, #d299c2 0%, #fef9d7 100%);
}

.usage-info {
  text-align: center;
}

.usage-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.usage-bar {
  width: 100%;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  margin-top: 16rpx;
  overflow: hidden;
}

.usage-progress {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 登录提示 */
.login-prompt {
  text-align: center;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
}

.login-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 0 40rpx;
  width: calc(100% - 80rpx);
  max-width: 600rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.modal-buttons .btn {
  flex: 1;
  margin: 0;
}

/* 性别选择样式 */
.gender-switch {
  display: flex;
  background: #f0f0f0;
  border-radius: 20rpx;
  padding: 6rpx;
}

.gender-option {
  flex: 1;
  text-align: center;
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  transform: scale(1);
  position: relative;
  overflow: hidden;
}

.gender-option::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transition: all 0.6s ease;
  transform: translate(-50%, -50%);
}

.gender-option:active {
  transform: scale(0.95);
}

.gender-option:active::before {
  width: 200%;
  height: 200%;
}

.gender-option.male.active {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(74, 144, 226, 0.4);
  transform: scale(1.02);
}

.gender-option.female.active {
  background: linear-gradient(135deg, #ff6b9d 0%, #e91e63 100%);
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 157, 0.4);
  transform: scale(1.02);
}

/* 女装风格选择样式 */
.style-section {
  margin: 30rpx 0;
  padding: 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.style-scroll {
  white-space: nowrap;
}

.style-tags {
  display: inline-flex;
  gap: 20rpx;
  padding: 10rpx 0;
}

.style-tag {
  display: inline-block;
  padding: 16rpx 32rpx;
  background: #f8f8f8;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.style-tag.female.active {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
  border-color: #ff6b9d;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.3);
  transform: translateY(-2rpx);
}

.style-tag.male.active {
  background: linear-gradient(135deg, #4a90e2, #6ba3f0);
  color: white;
  border-color: #4a90e2;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
  transform: translateY(-2rpx);
}

.style-tag.female:not(.active):hover {
  background: #ffe8f0;
  color: #ff6b9d;
  border-color: #ffcdd9;
}

.style-tag.male:not(.active):hover {
  background: #e8f2ff;
  color: #4a90e2;
  border-color: #cce0ff;
}



/* 响应式设计 */
@media (min-width: 768rpx) {
  .features {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .style-grid {
    grid-template-columns: repeat(5, 1fr);
  }
}